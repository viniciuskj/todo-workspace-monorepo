generator client {
  provider     = "prisma-client"
  output       = "../apps/todo-api/src/generated/prisma"
  moduleFormat = "cjs"
}

datasource db {
  provider = "postgresql"
}

model User {
  identifier String   @id @default(uuid())
  name       String
  email      String   @unique
  password   String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@map("users")
}
